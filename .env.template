# .env.example - Environment variables template
# Copy to .env and add your actual values

# Deployment environment
DEPLOYMENT=Development  # Set to 'Production' for production environment

# Google OAuth credentials
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Database credentials (for the current environment)
DB_HOST=127.0.0.1
DB_USER=db_username
DB_PASS=db_password
DB_NAME=db_name

# Site settings
SITE_URL=http://localhost:8000  # Update for production
INIT_DB_TOKEN=secure_initialization_token
ADMIN_EMAIL=admin@example.com